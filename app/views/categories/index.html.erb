	<html>
	<head lang="en">
	  <meta charset="UTF-8">
	  <title></title>

	  <link href="../../assets/stylesheets/stylesheet.css" rel="stylesheet">
	</head>
	<body>
	<div class="main-wrapper-div">

	  <div class="header">
		<div class="logo"><h1>पुस्तकालय</h1></div>

	  </div>
	  <div class="container" >
		<div style="width: 100%; padding: 20px 20% 0 20%;" align='center'>
		  <table class="table table-bordered table-striped" align="center" style="width: 100%;float: left;">
			<thead>
			<tr>
			  <th>
				Book Name
			  </th>
			  <th>
				Categories
			  </th>
			  <th>
				Author
			  </th>
			</tr>
			</thead>
			<tbody>
			<% @books.each do |book| %>
				<tr>
				  <td>
					<%= link_to book.name, book_path(book.id) %>
				  </td>

				  <td>
					<% book.categories.each do |category| %>
						<%= link_to category.name, category_path(category.id) %>
					<% end %>


				  </td>

				  <td>
						<%= link_to book.author.name, author_path(book.author.id) %>

				  </td>

				</tr>
			<% end %>



			</tbody>



		  </table>

		</div>







	  </div>

	</div>
	</body>
	</html>

