<h1 class='' style="background: #000000; color: #80c0c0; text-align: center;">Welcome To Library Club!</h1>


<!-- <a class="btn btn-default" href="#" role="button">Link</a> -->
<div style="width: 100%; padding: 20px 20% 0 20%;" align='center'>
	<table class="table table-bordered table-striped" align="center" style="width: 50%;float: left;">
		<thead>
			<tr>
				<th>
				  VIEW BY CATEGORY
				</th>
			</tr>
		</thead>
		<tbody>
			<% @categories.each do |category| %>
				<tr>
					<td>
						<%= link_to category.name, category_path(category.id) %>
					</td>
				</tr>
			<% end %>
		</tbody>



	</table>
	<table class="table table-bordered table-striped" align="center" style="width: 50%; float: left ;">
		<thead>
			<tr>
				<th>
				  VIEW BY AUTHOR
				</th>
			</tr>
		</thead>
		<tbody>
			<% @authors.each do |author| %>
				<tr>
					<td>
						<%= link_to author.name, author_path(author.id) %>
					</td>
				</tr>
			<% end %>
		</tbody>



	</table>
</div>